<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@drawable/background_bill_ele"
    android:elevation="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="5dp">

    <ImageView
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:src="@drawable/circle"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:src="@drawable/flash_icon"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="8dp"/>

    <ImageView
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:src="@drawable/check_icon"
        android:layout_marginTop="48dp"
        android:layout_marginStart="48dp"/>

    <TextView
        android:id="@+id/text_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiền điện tháng 4"
        android:layout_marginStart="73dp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-light"
        android:textSize="17sp"
        android:textColor="@color/black"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/pay_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="13:23 - 01/12/2022"
        android:layout_marginStart="73dp"
        android:fontFamily="sans-serif-thin"
        android:textStyle="bold"
        android:textSize="15sp"
        android:textColor="#827D7D"
        android:layout_marginTop="40dp"
        />

    <TextView
        android:id="@+id/amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="-750,000đ"
        android:layout_marginStart="3dp"
        android:fontFamily="sans-serif-black"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="13dp"
        />


</RelativeLayout>