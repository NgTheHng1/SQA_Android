    <RelativeLayout
        android:id="@+id/trans_money_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/navbar">

        <TextView
            android:id="@+id/text_xac_nhan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Kết quả giao dịch"
            android:textColor="@color/app_color"
            android:textSize="28sp"
            android:textStyle="bold" />

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/check_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@id/text_xac_nhan"
            android:src="@drawable/successful_gif"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/check_logo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            android:text="Thanh toán thành công"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bill_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="20dp"
            android:text="Tiền điện tháng 4"
            android:textColor="@color/black"
            android:textSize="26sp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-medium"/>

        <RelativeLayout
            android:id="@+id/success_info_container"
            android:layout_below="@id/bill_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/info_color"
            android:paddingVertical="5dp">

            <ImageView
                android:id="@+id/info_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/info_icon" />

            <TextView
                android:id="@+id/text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:text="Bạn thanh toán thành công"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text3"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:text="350,000đ"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/for_company"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/amount"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-medium"
                android:text="cho Điện lực Hồ Chi Minh"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_below="@id/success_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp">

            <TextView
                android:id="@+id/text5"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch vụ/Cửa hàng"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/text6"
                android:layout_below="@id/text5"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian thanh toán"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/text7"
                android:layout_below="@id/text6"
                android:layout_marginTop="12dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chi tiết giao dịch"
                android:fontFamily="sans-serif-thin"
                android:textStyle="bold"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/bill_name_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text5"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-light"
                android:text="Tiền điện tháng 4"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_trans_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text6"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-light"
                android:text="19:14 - 12/02/2023"
                android:textColor="@color/black"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/trans_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/text7"
                android:layout_alignParentEnd="true"
                android:fontFamily="sans-serif-light"
                android:text="123456789"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_below="@id/text7"
                android:layout_marginTop="20dp">
                
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/back_homepage"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Màn hình chính"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:background="@drawable/button_trans_result_1"/>

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/new_pay"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:text="Thanh toán HĐ mới"
                    android:textStyle="bold"
                    android:textAllCaps="false"
                    android:textSize="20sp"
                    android:textColor="@color/app_color"
                    android:background="@drawable/button_trans_result_2"/>

            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>